{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext", "dom"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
	},
	"exclude": ["node_modules", "build"]
}